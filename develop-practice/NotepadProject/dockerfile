# ===== ビルドステージ =====
FROM maven:3.9.6-eclipse-temurin-17 AS build

# 作業ディレクトリをプロジェクトの正しい場所に変更
WORKDIR /app/NotepadProject

# 必要なファイルをコピー
COPY NotepadProject/pom.xml .
COPY NotepadProject/src ./src

# ビルド（テストスキップ）
RUN mvn clean package -DskipTests

# ===== 実行ステージ =====
FROM eclipse-temurin:17-jdk

WORKDIR /app

# 上で作ったJARをコピー
COPY --from=build /app/NotepadProject/target/*.jar app.jar

# Render 用ポート設定
ENV PORT=8080
EXPOSE 8080

# Spring Boot アプリを起動
CMD ["java", "-jar", "app.jar"]
