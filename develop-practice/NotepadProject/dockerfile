# ベースイメージ（Maven + JDK17）
FROM maven:3.9.6-eclipse-temurin-17 AS build

# 作業ディレクトリ
WORKDIR /app

# プロジェクトファイルをコピー
COPY . .

# ビルド（テストスキップ）
RUN mvn clean package -DskipTests

# 実行用ステージ
FROM eclipse-temurin:17-jdk

WORKDIR /app

# ビルド済みJARをコピー
COPY --from=build /app/target/*.jar app.jar

# Render用ポート
ENV PORT=8080
EXPOSE 8080

# アプリ起動
CMD ["java", "-jar", "app.jar"]
